<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit comment"</h1>
        
        <div style="width: 50%; margin: 25px auto;">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>/?_method=PUT" method="POST">
                <div class=form-group>
                    <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]" required="true">
                </div>
                 <div class=form-group>
                    <button class="btn btn-lg btn-primary btn-block">Update comment</button>
                </div>
            </form>
            
            <a style="text-align: center;" href="/campgrounds">View all campgrounds</a>
        </div>
        
    </div>
</div>

<% include ../partials/footer %>